@page
@model AuctionItemsModel
@{
    ViewData["Title"] = "Auction Items";
}

<style>
    body {
        background-color: #f0f2f5; 
    }
    .page-header {
        margin-bottom: 30px;
        text-align: center;
        color: #343a40;
    }
    .table-container {
        background-color: #ffffff; 
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin-bottom: 30px;
    }
    .form-container {
        background-color: #B5EDF1;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        margin: 0 auto; 
        max-width: 600px; 
    }
    .form-group label {
        font-weight: bold;
    }
    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
    }
    .btn-primary:hover {
        background-color: #0056b3;
        border-color: #004085;
    }
</style>

<div class="container mt-5">
    <div class="page-header">
        <h1 class="display-4">Auction Items</h1>
    </div>

    @if (Model.AuctionItems != null && Model.AuctionItems.Any())
    {
        <div class="table-container">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>Product ID</th>
                        <th>Title</th>
                        <th>Description</th>
                        <th>Starting Price</th>
                        <th>End Date</th>
                        <th>User ID</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.AuctionItems)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Title</td>
                            <td>@item.Description</td>
                            <td>@item.StartingPrice</td>
                            <td>@item.EndDate</td>
                            <td>@item.UserId</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-warning" role="alert">
            No auction items available.
        </div>
    }

    <div class="form-container">
        <h2 class="mb-4">Add New Auction Item</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="NewAuctionItem.Title"></label>
                <input asp-for="NewAuctionItem.Title" class="form-control" />
                <span asp-validation-for="NewAuctionItem.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAuctionItem.Description"></label>
                <input asp-for="NewAuctionItem.Description" class="form-control" />
                <span asp-validation-for="NewAuctionItem.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAuctionItem.StartingPrice"></label>
                <input asp-for="NewAuctionItem.StartingPrice" class="form-control" />
                <span asp-validation-for="NewAuctionItem.StartingPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAuctionItem.EndDate"></label>
                <input asp-for="NewAuctionItem.EndDate" class="form-control" />
                <span asp-validation-for="NewAuctionItem.EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewAuctionItem.UserId"></label>
                <input asp-for="NewAuctionItem.UserId" class="form-control" />
                <span asp-validation-for="NewAuctionItem.UserId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary btn-block">Add Auction Item</button>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
